{
  "name": "taskflow",
  "version": "3.0.0",
  "description": "Enhanced task management application with Node.js backend",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "lint": "eslint scripts/ --ext .js",
    "lint:fix": "eslint scripts/ --ext .js --fix",
    "test": "echo 'Integration tests will be added in future versions'",
    "validate": "npm run lint && npm run validate:html && npm run validate:css",
    "validate:html": "echo 'HTML validation - basic structure check'",
    "validate:css": "echo 'CSS validation - syntax check'",
    "build": "echo 'Build process - optimization for production'",
    "deploy": "echo 'Deployment to GitHub Pages via GitHub Actions'",
    "format": "prettier --write .",
    "format:check": "prettier --check ."
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/your-username/taskflow.git"
  },
  "keywords": [
    "task-management",
    "productivity",
    "javascript",
    "html5",
    "css3",
    "responsive-design",
    "local-storage",
    "web-application",
    "devops",
    "git-workflow",
    "nodejs",
    "express",
    "docker",
    "containerization"
  ],
  "author": "TaskFlow Development Team",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/your-username/taskflow/issues"
  },
  "homepage": "https://your-username.github.io/taskflow/",
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "eslint": "^8.50.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-n": "^16.1.0",
    "eslint-plugin-promise": "^6.1.1",
    "prettier": "^3.0.3"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead",
    "not ie 11"
  ],
  "engines": {
    "node": ">=22.0.0",
    "npm": ">=9.0.0"
  },
  "files": [
    "server.js",
    "public/",
    "docs/",
    "README.md",
    "LICENSE"
  ],
  "config": {
    "eslint": {
      "extends": [
        "standard"
      ],
      "rules": {
        "no-console": "off",
        "no-unused-vars": "error"
      }
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint",
      "pre-push": "npm run test"
    }
  },
  "prettier": {
    "semi": true,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "es5",
    "printWidth": 100
  },
  "metadata": {
    "framework": "Vanilla JavaScript",
    "architecture": "Client-side SPA with Node.js backend",
    "storage": "In-memory (server)",
    "deployment": "Docker container",
    "ci": "GitHub Actions"
  }
}
